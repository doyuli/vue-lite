{
  "name": "vue-lite",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.6.5",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/dev.js --format esm",
    "dev:shared": "node scripts/dev.js shared --format cjs",
    "test": "pnpm test:unit",
    "test:unit": "vitest --project unit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@types/node": "^22.15.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.30.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  }
}
